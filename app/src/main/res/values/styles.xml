<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorPrimaryLight</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:paddingStart">@dimen/toolbar_title_start_margin</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="titleTextAppearance">@style/Toolbar.TittleText</item>
    </style>

    <style name="Toolbar.TittleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TitleText">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="ContentText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

</resources>
